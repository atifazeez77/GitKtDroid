<resources>

    <style name="RepoTitle">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RepoOwner">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RepoAvatar">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ReposRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="RepoDescription">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="RepoStars" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="RepoStarsImage">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="UsernameTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">12sp</item>
        <item name="startIconDrawable">@drawable/ic_github</item>
        <item name="iconPadding">@dimen/dimen_4</item>
    </style>

    <style name="TextCard">
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>
